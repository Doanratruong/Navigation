<robot name="my_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.4"/>
      <geometry>
        <box size="0.5 0.395 0.8"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>
  
  <!-- Laser -->
  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>
  
  <!-- Joints -->
  
  <joint name="laser_joint" type="fixed"> 
  <!--continuous-->
    <parent link="base_link"/>
    <child link="laser"/>
    <origin xyz="0 0 0.2" rpy="0 0 3.141592"/>
    <!--<axis xyz="0 1 0"/>-->
  </joint>
  
 

</robot>

